  .razr-img img {
    max-width: 100%;
    width: 100%;
}
.metaa {display: flex;justify-content: space-between;align-items:center}
  span.deal_price {
    font-size: 18px;
    margin-left: 4px;
    color: red;
}
.rateit {display: flex;font-family: 'Roboto';}
  .prod-rev.razr{padding-left:5px}
  .prod-rate.razr{padding-right:5px}
p.price_slashed {
    margin-bottom: -8px;
    position: relative;
  text-align:left
}
  p.price_slashed::before {
    content: "";
    width: 91px;
    height: 2px;
    position: absolute;
    background-color: #000;
    top: 13px;
    transform: rotate(354deg);
}
  .prod-rate.razr svg {
    color: #ffc200;
}
@media(max-width:450px) {
.razr-block{display:flex;justify-content:flex-start;overflow-x:scroll;scroll-snap-type:x mandatory;scroll-padding:20px;width:100%;padding:20px;transition:.4s}
.razr-wrapper{flex:80% 0 0;scroll-snap-align:start;margin:8px 10px}
}
</style>
<div class="razr-block-main">
<div class="razr-block">
  {% for block in section.blocks %}
  {% assign razr_prod = all_products[block.settings.prod] %}
  {% assign razr_var = razr_prod.selected_or_first_available_variant %}
  <div class="razr-wrapper">
    <div class="razr-container">
     <a href="{{ razr_prod.url }}"> <div class="top" style="background-color:{{ block.settings.top_color }}">
        <div class="razr-img"><h2><img src="{{ block.settings.razor_img | img_url:"master" }}" loading="lazy"></h2></div>
      </div></a>
      <div class="bottom">
        <h2>{{ razr_prod.title }}</h2>
        <a href="{{ razr_prod.url }}"><div class="metaa">
          <div class="pridce">
          {% if razr_prod.compare_at_price > razr_prod.price %}
            <p class="price_slashed">MRP: <span class="mrp">{{ razr_prod.compare_at_price | money_with_currency }}</span></p>
            <p class="disc_price">Deal Price:<span class="deal_price">{{ razr_prod.price | money_with_currency }}</span></p>
          {% else %}
            <p>MRP: <span class="mrp_without_slash">{{ razr_prod.compare_at_price | money_with_currency }}</span></p>
            {% endif %}
        </div>
          <div class="rateit">
            <div class="prod-rate razr">{% render 'icon' with 'rating-star' %}{{ razr_prod.metafields.reviews.rating.value }}</div>
            <span>|</span>
            <div class="prod-rev razr">{{ razr_prod.metafields.reviews.rating_count.value }} Reviews</div>
          </div>
        </div></a>
        <div class="btncart">
          {% if razr_prod.available %}
                <button type="submit" name="add" aria-label="Add to cart" class="ad_to_cart_coll Button Button--primary razr" id="ad_to_cart" aria-haspopup="dialog" data-add-to-cart="{{ razr_var.id }}" data-var_id="{{ razr_var.id }}"><span>Add to cart</span></button>
            {% else %}
                <button type="submit" name="add" aria-label="Add to cart" class=" Button Button--primary soldout" id="ad_to_cart" ><span>Sold Out</span></button>
                  {% endif %}
              </div>
      </div>
    </div>
    <div class="inside">
      <div class="icon"><img src="https://cdn.shopify.com/s/files/1/0459/6563/9834/files/info.png?v=1690724659"></div>
      <div class="contents">{{ block.settings.razr_html }}</div>
    </div>
  </div>
    {% endfor %}
</div>
</div>
<script>
  $('.buy').click(function(){
  $('.bottom').addClass("clicked");
});

$('.remove').click(function(){
  $('.bottom').removeClass("clicked");
});
  $('.contents').click(function(){
  $('.bottom').removeClass("clicked");
});
</script>
