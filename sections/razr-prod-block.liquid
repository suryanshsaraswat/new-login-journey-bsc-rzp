  {
    "name": "Razor Product Block",
    "settings": [],
    "blocks":[
      {
        "type":"product",
        "name":"Razor Block",
        "settings":[
          {
            "type":"product",
            "id":"prod",
            "label":"select product"
          },
          {
            "type":"image_picker",
            "id":"razor_img",
            "label":"select razr img"
          },
          {
            "type": "html",
            "id": "razr_html",
            "label": "HTML content",
            "default": "<p>Write your own custom HTML content.</p>"
          },
          {
            "type":"color",
            "id":"top_color",
            "label":"enter color"
          }
        ]
      }
    ],
    "presets":[
      {
        "category":"product",
        "name":"Razor Product Block"
      }
    ]
  }
{% endschema %}

