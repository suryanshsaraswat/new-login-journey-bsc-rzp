        "type": "Product",
        "name": "text block",
        "settings": [
          {
            "type": "text",
            "id": "heading-text",
            "label": "Enter text here"
          }
        ]
      }
	],
    "presets": [
	  {
		"name": "Rich text",
		"category": "Product"
		
      }
	]
  }
{% endschema %}