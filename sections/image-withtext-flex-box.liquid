        "type": "Product",
        "name": "image with text block",
        "settings": [
          {
            "type": "image_picker",
            "id": "featured_image_flex",
            "label": "Upload Image"
          },
          {
            "type": "text",
            "id": "heading-1",
            "label": "Heading 1"
          },
          {
            "type": "text",
            "id": "heading-2",
            "label": "Heading 2"
          }
        ]
      }
	],
    "presets": [
	  {
		"name": "Image with text flex-box",
		"category": "Product"
		
      }
	]
  }
{% endschema %}