<style>
  .custom-popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .custom-popup {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    border-top: 1px solid #ccc;
    z-index: 2;
  }

  .custom-popup-content {
    padding: 10px;
  }

  .custom-popup.slide-up {
    animation: custom-slide-up 0.5s ease-out forwards;
  }

  .custom-popup.slide-down {
    animation: custom-slide-down 0.5s ease-out forwards;
  }

  @keyframes custom-slide-up {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }

  @keyframes custom-slide-down {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(100%);
    }
  }
</style>
<div class="custom-popup-overlay" id="custom-popup-overlay"></div>
<div id="custom-popup" class="custom-popup">
  <div class="custom-popup-content">
    <button class="custom-popup-close" id="custom-popup-close">Close</button>
    <p>Your popup content goes here.</p>
    <button id="custom-popup-button">Click me</button>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const customPopup = document.getElementById("custom-popup");
    const customPopupButton = document.getElementById("custom-popup-button");
    const customPopupClose = document.getElementById("custom-popup-close");
    const customPopupOverlay = document.getElementById("custom-popup-overlay");

    function showPopup() {
      customPopup.classList.add("slide-up");
      customPopupOverlay.style.display = "block";
      customPopup.style.display = "block";
    }

    function hidePopup() {
      customPopup.classList.add("slide-down");
      setTimeout(() => {
        customPopupOverlay.style.display = "none";
        customPopup.style.display = "none";
      }, 500);
    }

    if (!localStorage.getItem("customPopupClicked")) {
      setTimeout(showPopup, 5000);
    }

    customPopupButton.addEventListener("click", function () {
      localStorage.setItem("customPopupClicked", "true");
      hidePopup();
    });

    customPopupClose.addEventListener("click", function () {
      hidePopup();
    });

    customPopupOverlay.addEventListener("click", function () {
      hidePopup();
    });
  });
</script>
